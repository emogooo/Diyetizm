<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewSporAdiDetayTarih"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="Emirhan Baba"
            android:textColor="#000000"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="Yapılan"
            android:textColor="#36023a"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textViewYapilanDakikaDetayTarih"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="150 dk"
            android:textColor="#36023a"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="Yakılan"
            android:textColor="#01382b"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textViewYakilanKaloriDetayTarih"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="3000 kcal"
            android:textColor="#01382b"
            android:textSize="15dp" />

    </LinearLayout>

</LinearLayout>

</LinearLayout>