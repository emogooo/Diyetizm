<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5DC"
    tools:context=".ProfilPaneli">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewProfil"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="100dp"
            android:fontFamily="monospace"
            android:text="PROFIL"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewProfilEmail1"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:fontFamily="monospace"
                android:text="E-Posta: "
                android:textColor="#000000"
                android:textSize="23dp" />

            <TextView
                android:id="@+id/textViewProfilEmail2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:fontFamily="monospace"
                android:textColor="#000000"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewProfilAd1"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:fontFamily="monospace"
                android:text="Ad: "
                android:textColor="#000000"
                android:textSize="23dp" />

            <TextView
                android:id="@+id/textViewProfilAd2"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:fontFamily="monospace"
                android:textColor="#000000"
                android:textSize="23dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewProfilSoyad1"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:fontFamily="monospace"
                android:text="Soyad: "
                android:textColor="#000000"
                android:textSize="23dp" />

            <TextView
                android:id="@+id/textViewProfilSoyad2"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:fontFamily="monospace"
                android:textColor="#000000"
                android:textSize="23dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewProfilDT1"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:fontFamily="monospace"
                android:text="Dogum Tarihi: "
                android:textColor="#000000"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/textViewProfilDT2"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:fontFamily="monospace"
                android:textColor="#000000"
                android:textSize="23dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewProfilKilo1"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:fontFamily="monospace"
                android:text="Kilo: "
                android:textColor="#000000"
                android:textSize="23dp" />

            <TextView
                android:id="@+id/textViewProfilKilo2"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:fontFamily="monospace"
                android:textColor="#000000"
                android:textSize="23dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewProfilBoy1"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:fontFamily="monospace"
                android:text="Boy: "
                android:textColor="#000000"
                android:textSize="23dp" />

            <TextView
                android:id="@+id/textViewProfilBoy2"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:fontFamily="monospace"
                android:textColor="#000000"
                android:textSize="23dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>