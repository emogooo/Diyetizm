<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ekran_temasi2"
    tools:context=".GunlukKaloriActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/actionbarLogin60"
            layout="@layout/actionbar60" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewNetKalori"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="Net Kalori: 0 kcal"
                android:textColor="#ce0404"
                android:textSize="25dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="35dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:fontFamily="monospace"
                        android:text="AlÄ±nan Kalori"
                        android:gravity="center"
                        android:textColor="#504949"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/textViewAlinanKalori"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:fontFamily="monospace"
                        android:text="0 kcal"
                        android:textColor="#504949"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:fontFamily="monospace"
                        android:text="Verilen Kalori"
                        android:textColor="#504949"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/textViewVerilenKalori"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:fontFamily="monospace"
                        android:text="0 kcal"
                        android:gravity="center"
                        android:textColor="#504949"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewProtein"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fontFamily="monospace"
                    android:text="Protein: 0 g"
                    android:textColor="#01b720"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/textViewYag"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fontFamily="monospace"
                    android:text="Yag: 0 g"
                    android:textColor="#9da700"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/textViewKarbonhidrat"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fontFamily="monospace"
                    android:text="Karbonhidrat: 0 g"
                    android:textColor="#774d0e"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <GridView
                android:id="@+id/gridOgun"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="2" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>