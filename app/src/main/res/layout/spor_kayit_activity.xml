<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5DC"
    tools:context=".SporKayitActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sporKayitBaslik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="100dp"
            android:fontFamily="monospace"
            android:text="YENI SPOR EKLE"
            android:textColor="#000000"
            android:textSize="28dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewSporAd0"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:fontFamily="monospace"
                android:text="Ad: "
                android:textColor="#000000"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTextSporAd"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:inputType="text"
                android:textSize="12dp"
                android:hint="Ad"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewSporSaatlikYakilanKalori0"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_marginLeft="25dp"
                android:fontFamily="monospace"
                android:text="Yakılan Kalori: "
                android:textColor="#000000"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTextSporSaatlikYakilanKalori"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:inputType="number"
                android:textSize="12dp"
                android:hint="saat / kcal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewSporYapilmaSuresi0"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:fontFamily="monospace"
                android:text="Yapılan Süre: "
                android:textColor="#000000"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTextSporYapilmaSuresi"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:inputType="number"
                android:textSize="12dp"
                android:hint="dk"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="45dp">

            <Button
                android:id="@+id/buttonSporKaydet"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:background="@drawable/uyebutonu"
                android:fontFamily="monospace"
                android:text="EKLE"
                android:textColor="#000000"
                android:textSize="25dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>