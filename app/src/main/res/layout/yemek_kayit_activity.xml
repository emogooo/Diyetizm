<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5DC"
    tools:context=".YemekKayit">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/kayitBaslik"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="50dp"
            android:fontFamily="monospace"
            android:text="YENI YEMEK EKLE"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewYemekAd0"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:fontFamily="monospace"
                android:text="Ad: "
                android:textColor="#000000"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTextYemekAd"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:inputType="text"
                android:textSize="12dp"
                android:hint="Ad"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewYemekKalori0"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:fontFamily="monospace"
                android:text="Kalori: "
                android:textColor="#000000"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTextYemekKalori"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:inputType="number"
                android:textSize="12dp"
                android:hint="kcal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewYemekProtein0"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:fontFamily="monospace"
                android:text="Protein: "
                android:textColor="#000000"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTextYemekProtein"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:inputType="number"
                android:textSize="12dp"
                android:hint="g"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewYemekYag0"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:fontFamily="monospace"
                android:text="Yag: "
                android:textColor="#000000"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTextYemekYag"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:inputType="number"
                android:textSize="12dp"
                android:hint="g"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewYemekKarbonhidrat0"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:fontFamily="monospace"
                android:text="Karbonhidrat: "
                android:textColor="#000000"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTextYemekKarbonhidrat"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:inputType="number"
                android:textSize="12dp"
                android:hint="g"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_marginTop="45dp">

            <Button
                android:id="@+id/buttonFotoCek"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:background="@drawable/uyebutonu"
                android:fontFamily="monospace"
                android:text="FOTOÄžRAF EKLE"
                android:textColor="#000000"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/imageViewYemekFotosu"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:layout_marginTop="45dp">

            <Button
                android:id="@+id/buttonYemekKaydet"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:background="@drawable/uyebutonu"
                android:fontFamily="monospace"
                android:text="EKLE"
                android:textColor="#000000"
                android:textSize="20dp" />

        </LinearLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>